<%= form_with model: @article do |f| %>
<div class="d-flex flex-column align-items-start">
  <div class="d-flex align-items-start">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="d-flex align-items-start">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <div class="d-flex align-items-start">
    <%= f.submit %>
  </div>
</div>
<% end %>
